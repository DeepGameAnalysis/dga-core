<UserControl x:Class="EDGui.Views.AnalyseTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EDGui.Views"
             xmlns:elements="clr-namespace:EDGui.Elements"
             xmlns:shapes="clr-namespace:Shapes"
             xmlns:converters="clr-namespace:EDGui.Utils.Converters"
             xmlns:vmodels="clr-namespace:EDGui.ViewModel"

             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.Resources>
        <converters:TimeFormatConverter x:Key="TimeConverter"/>
        <converters:XCoordinateConverter x:Key="XCoordConverter"/>
        <converters:YCoordinateConverter x:Key="YCoordConverter"/>
        <converters:ScaleConverter x:Key="ScaleConverter"/>
    </UserControl.Resources>

    <Grid Background="#FFE5E5E5" IsEnabled="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <elements:DeactivatedMessage x:Name="deactivatedMsg" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.ColumnSpan="5" Grid.RowSpan="4" Panel.ZIndex="2" />

        <Label Grid.Row="0" Content="Analyse" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontSize="25" Background="DeepSkyBlue" Foreground="Black" Grid.ColumnSpan="5"/>

        <Image Grid.Row="1" Grid.Column="2" Source="{Binding GameImageSource}" Width="{Binding ImageWidth}"  Height="{Binding ImageHeight}" />

