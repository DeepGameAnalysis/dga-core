<UserControl x:Class="EDGui.Views.AnalyseTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EDGui.Views"
             xmlns:elements="clr-namespace:EDGui.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Background="#FFE5E5E5">

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Analyse" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" Foreground="Black"/>

        <elements:UIInteractiveMap x:Name="interactiveMap" Background="Black"  Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MouseUp="InteractiveMapClicked"/>

        <Grid Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>

            <Label Content="Statistics" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" Foreground="Black"/>

            
            <DockPanel Grid.Row="0" HorizontalAlignment="Stretch" Background="#576573" >
                <Button x:Name="playButton" Content="Play" FontSize="10" Height="Auto" Width="70"  Background="#252525" Foreground="#95C8FC" HorizontalAlignment="Left" BorderThickness="0" MouseUp="PlayClicked"/>
                <Label x:Name="timeLabel" Content="Time: 0:00 / 0:00" FontSize="10" Width="Auto" Foreground="White" VerticalContentAlignment="Center" HorizontalAlignment="Left" />
                <Label x:Name="tickLabel" Content="Tick: 0" FontSize="10" Width="Auto" Foreground="White" VerticalContentAlignment="Center" HorizontalAlignment="Right" />
                <Slider x:Name="silder" HorizontalAlignment="Stretch" VerticalAlignment="Center" TickPlacement="BottomRight" TickFrequency="2" Margin="0,0,5,0"/>
            </DockPanel>

            <DockPanel Grid.Row="1" HorizontalAlignment="Stretch" Background="LightGray" >
                <GroupBox x:Name="optionsGroup" Header="Options:" FontSize="15" Width="Auto" Foreground="Black" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" />
            </DockPanel>
        </Grid>

    </Grid>
</UserControl>
