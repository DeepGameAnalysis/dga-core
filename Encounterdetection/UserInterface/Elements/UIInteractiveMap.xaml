<UserControl x:Class="EDGui.Elements.UIInteractiveMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EDGui.Elements"
             mc:Ignorable="d" 
             Height="720"
             Width="1280">
    <Grid>
        <!--<Canvas x:Name="MapCanvas"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Black"/>-->
        <Image Source="{Binding Path=Renderer.GameImageSource}" Width="{Binding ImageWidth}" Height="{Binding ImageHeight}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <Label x:Name="MapLabel" Content="Map:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="TickRateLabel" Content="Tickrate:" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
